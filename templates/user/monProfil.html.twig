{% extends 'base.html.twig' %}
{% block head %}

	<!-- profilParticipant css -->
	<link rel="stylesheet" href="{{asset('css/profilParticipant.css')}}">
	<link rel="stylesheet" type="text/css" href="{{ asset('css/profil.css')}}">
{% endblock %}
{% block main%}
	<div class="container mt-5 d-flex justify-content-center">
		<div class="col-12">
			<div class="card user-card-full row">
				<div class="row m-l-0 m-r-0">
					<div class="col-sm-4 bg-c-lite-green user-profile text-center">
						<div class="card-block text-center text-white">
							<div class="signup-image">
								<figure>
									{% if app.user.photo == null %}
										<img src="{{('/images/icons/boy.png')}}" alt="sing up image">
									{% else %}
										<img src="{{ asset('images/photo_profil/' ~ app.user.photo) }}">
									{% endif %}
								</figure>
							</div>
						</div>
						<h3 class="f-w-800">{{app.user.pseudo}}</h3>
						<a class="nav-link text-white" href="{{path('edit_profil') }}">
							<i class="far fa-edit"></i>
						</a>
					</div>

					<div class="col-sm-8">
						<div class="card-block">
							<h5 class="m-b-20 p-b-5 b-b-default f-w-600">Mon profil</h5>
							<div class="row">
								<div class="col-sm-6">
									<p class="m-b-10 f-w-600">Prénom:</p>
									<h6 class="text-muted f-w-400">{{app.user.prenom}}</h6>
								</div>
								<div class="col-sm-6">
									<p class="m-b-10 f-w-600">Nom:</p>
									<h6 class="text-muted f-w-400">{{app.user.nom}}</h6>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-6">
									<p class="m-b-10 f-w-600">Téléphone:</p>
									<h6 class="text-muted f-w-400">{{app.user.telephone}}</h6>
								</div>
								<div class="col-sm-6">
									<p class="m-b-10 f-w-600">Email:</p>
									<h6 class="text-muted f-w-400">{{app.user.mail}}</h6>
								</div>
							</div>
							<div class="row">
								<div class="col">
									<p class="m-b-10 f-w-600">Ville de rattachement:</p>
									<h6 class="text-muted f-w-400">{{app.user.site.nomSite}}</h6>
								</div>

							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
