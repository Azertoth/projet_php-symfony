
{% extends 'base.html.twig' %}

{% block main%}
    <div class="container">

        <h1 class="text-center display-4 lead">Annuler une sortie</h1>
        <div class="row">
            <div class="col">
                <div class="card mb-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <span class="font-weight-bold">Nom : </span>
                            {{ sorties.nomSortie }}
                        </li>
                        <li class="list-group-item">
                            <span class="font-weight-bold">Date de la sortie : </span>
                            {{ sorties.dateHeureDebut|date('d/m/y') }}
                        </li>
                        <div class="list-group-item">
                            <span class="font-weight-bold">Ville Organisatrice : </span>
                            {{ sorties.site.nomSite }}
                        </div>
                        <li class="list-group-item">
                            <span class="font-weight-bold">Lieu : </span>
                            {{ sorties.lieu.nomLieu }} {{ sorties.lieu.rue }} {{ sorties.lieu.ville.codePostal }} {{ sorties.lieu.ville.nomVille }}
                        </li>
                        <li class="list-group-item">
                            <span class="font-weight-bold">Description et infos : </span>
                            {{ sorties.infosSortie }}
                        </li>
                    </ul>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            {{ form(formAnnuller) }}
                        </div>
{#                        <form class="col-4" method="post">#}
{#                            <button type="submit" class="btn btn-danger">Enregister l'annulation</button></form>#}
                        <div class="col-4"><a class="btn btn-success w-100" href="{{ path('main') }}">Retour </a></div>
                    </div>
                </div>

            </div>
        </div>

    </div>
{% endblock %}