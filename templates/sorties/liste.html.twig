{% extends 'base.html.twig' %}

{% block main%}


    <div class="container">
        <h1 class="text-center display-4 lead">Afficher une sortie</h1>
    <div class="row">
    <div class="col-5">
        <div class="card mb-4">
            <ul class="list-group list-group-flush">
                <div class="card-header">
                    <h4>Sortie : {{ sorties.nomSortie }}</h4>
                </div>
                <li class="list-group-item">
                    <span class="font-weight-bold">Nom : </span>
                    {{ sorties.nomSortie }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Date et heure de la sortie : </span>
                    {{ sorties.dateHeureDebut|date('d/m/y h:m') }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Date limite d'inscription : </span>
                    {{ sorties.dateLimiteInscription|date('d/m/y') }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Nombre de places : </span>
                    {{ sorties.nbInscriptionsMax }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Dur√©e : </span>
                    {{ sorties.duree }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Description et infos : </span>
                    {{ sorties.infosSortie }}
                </li>
            </ul>
        </div>
    </div>
    <div class="col-5">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Ville organisatrice : {{ sorties.site.nomSite}}</h4>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="font-weight-bold">Nom : </span>
                    {{ sorties.site.nomSite }}
                </li>
            </ul>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Lieu : {{ sorties.lieu.nomLieu }}</h4>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="font-weight-bold">Nom : </span>
                    {{ sorties.lieu.nomLieu }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Rue : </span>
                    {{ sorties.lieu.rue }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Code postal : </span>
                    {{ sorties.lieu.ville.codePostal }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Latitude : </span>
                    {{ sorties.lieu.latitude }}
                </li>
                <li class="list-group-item">
                    <span class="font-weight-bold">Longitude : </span>
                    {{ sorties.lieu.longitude }}
                </li>
            </ul>
        </div>
    </div>
    </div>
        <hr>

        <div class="text-center">
            <h1 class="lead display-4">Liste de partitipants</h1>
        </div>

        <div class="row">
            <table id="tableParticipants" class="table table-striped table-bordered" style="width:100%">
                <thead class="thead-dark text-center">
                <tr>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Nom</th>
                </tr>
                </thead>
                <tbody>
                {% if participants is not empty %}
                    {% for participant in participants %}
                        <tr class="text-center">
                            <td scope="row">{{ participants.participant.pseudo }}</td>
                            <td scope="row"> {{ participants.participant.prenom }} {{ participants.participant.nom }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}